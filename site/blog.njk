---
layout: default
title: My Blog
pagination:
  data: collections.blog
  reverse: true
  size: 10
  alias: posts
---
<div class="max-w-3xl">
  {% for post in posts %}
    <article class="mb-4">
    <h2><a href="{{ post.url | url }}">{{ post.data.title }}</a></h2>
    {% excerpt post %}
    </article>
  {% endfor %}

{% if pagination.previousPageHref or pagination.nextPageHref %}
  <div class="flex mt-10 max-w-lg mx-auto">
    {% if pagination.nextPageHref %}
    <a class="flex-auto text-left" href="{{pagination.nextPageHref}}">← Older Posts</a>
    {% endif %}
    {% if pagination.previousPageHref %}
    <a class="flex-auto text-right" href="{{pagination.previousPageHref}}">Newer Posts →</a>
    {% endif %}
  </div>
{% endif %}
</div>
